<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".formperro">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="189dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:text="Datos de la Mascota"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/textPeso"
        android:layout_width="352dp"
        android:layout_height="82dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="13dp"
        android:gravity="center"
        app:endIconMode="clear_text"
        app:layout_constraintBottom_toTopOf="@+id/editTextDate"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="Peso"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/textRaza"
        android:layout_width="352dp"
        android:layout_height="82dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        app:endIconMode="clear_text"
        app:layout_constraintBottom_toTopOf="@+id/textPeso"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="Raza" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/textEdad"
        android:layout_width="352dp"
        android:layout_height="82dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        app:endIconMode="clear_text"
        app:layout_constraintBottom_toTopOf="@+id/textRaza"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="Edad"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textNombre"
        android:layout_width="352dp"
        android:layout_height="82dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        app:endIconMode="clear_text"
        app:layout_constraintBottom_toTopOf="@+id/textEdad"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="Nombre"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btfecha"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="224dp"
            android:backgroundTint="#00BCD4"
            android:text="Fecha Nacimineto"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editTextDate"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextDate2"
            android:layout_width="149dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="224dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="d-m-a"
            android:textAlignment="center"
            android:layout_marginStart="20dp"
            android:inputType="date"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>

</LinearLayout>